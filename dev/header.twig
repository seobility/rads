<header class="header js-header">
	<div class="container">
		<div class="row">
			<a href="#" class="logo">
				{{img.getSvg({src: "logo", img: true})}}
			</a>
			<form action="#" class="form form-search">
				<div class="input-wrap-search">
					<input type="text" class="input" placeholder="Поиск">
					<button type="submit" class="icon">
						{{img.getSvg({src: "search"})}}
					</button>
				</div>
			</form>
			<nav class="menu">
				<ul class="menu-list">
					<li class="menu-item">
						<a href="#" class="menu-link">
							<span class="icon">
								{{img.getSvg({src: "star"})}}
							</span>
							<span class="text">
								Интересы
							</span>
						</a>
					</li>
					<li class="menu-item notif">
						<a href="#" class="menu-link">
							<span class="icon">
								{{img.getSvg({src: "message-square"})}}
							</span>
							<span class="text">
								Сообщения
							</span>
						</a>
					</li>
					<li class="menu-item notif">
						<a href="#" class="menu-link">
							<span class="icon">
								{{img.getSvg({src: "bell"})}}
							</span>
							<span class="text">
								Уведомления
							</span>
						</a>
					</li>
					<li class="menu-item">
						<a href="#" class="menu-link">
							<span class="icon">
								{{img.getSvg({src: "bookmark"})}}
							</span>
							<span class="text">
								Закладки
							</span>
						</a>
					</li>
				</ul>
			</nav>
			<div class="profile dropdown js-dropdown">
				<div class="profile-head dropdown-trigger js-dropdown-trigger">
					<span class="profile-avatar">
						{{img.get({src: "profile-avatar.png"})}}
					</span>
					<div class="profile-info">
						<div class="name">
							<span class="text">
								Rafidah Wajd Dagher
							</span>
						</div>
						<span class="type">
							Профиль
						</span>
					</div>
					<span class="profile-arrow">
						{{img.getSvg({src: "chevron-down"})}}
					</span>
				</div>
				<div class="profile-body dropdown-body js-dropdown-body"></div>
			</div>
		</div>
	</div>
</header>
